void scrollMsg(const char* mensaje, unsigned long frecuencia) {
  int inicio = 24;
  int pasos = strlen(mensaje) * 8;
  for (int i = inicio; i >= -pasos; i--) {
    escribirFrase(mensaje, i);
    delay(frecuencia);
  }
